{% extends 'base.html.twig' %}

{% block style %}
<link rel="stylesheet" href="{{ asset('components/carousel.css') }}">
<link rel="stylesheet" href="{{ asset('style/charity.css') }}">
{% endblock %}

{% block title %}
Nos associations partenaires
{% endblock %}

{% block content %}
<div class="row">

    {# carousel container #}
    <div class="col s12 m12 l7">

        <div class="carousel">
            {% for charity in charity_array %}
            <div class="carousel-item shadow" ext-link="{{ charity.website }}" charity-name="{{ charity.name }}">
                <img src="{{ asset('images/logos-transp/' ~ charity.image) }}"
                    alt="Soutenez {{ charity.name }} dans sa lutte !!">
            </div>
            {% endfor %}

        </div>


    </div>

    <div class="col s12 m12 l5 away-from-header away-from-side  ">
        <div class="shadow narrow-fade">
            {# top visit link #}
            <a href="" class="button blue visit no-top hover-full">
                En savoir plus sur l'association
            </a>

            {# description container, padding added to p+p #}
            <div class="description ">

                <h2 class="description-title"> {{ charity_array.0.name }} </h2>
                {% for charity in charity_array %}

                {% for text in charity.texts %}

                <p id="desc" class="hidden-text" data-target="{{ charity.name }}">
                    {{ text.description }}
                </p>

                {% endfor %}

                {% endfor %}

            </div>

            {# bottom visit link #}
            <a href="" class="button blue visit bo-bottom hover-full">
                En savoir plus sur l'association
            </a>
        </div>
    </div>

</div>
{% endblock %}

{% block script %}
<script src="{{ asset('js/carousel.js') }} "></script>
<script src="{{ asset('js/charity.js') }} "></script>
{% endblock %}